@model IEnumerable<SchoolProject.Models.Teacher>
@{
    ViewBag.Title = "Lists";
}

<div id="containerlist">
    <h2>List of Teachers</h2>

    <div class="form-container mb-3">
        <form action="/teacher/lists" method="GET" class="d-flex align-items-center gap-3">
            <label for="searchType">Search By: </label>
            <select name="searchType" id="searchType">
                <option value="name">Name</option>
                <option value="hiredate">Hire Date</option>
                <option value="empnum">Employee Number</option>
            </select>
            <input type="text" name="SearchKey" value="" />

            <button>Search</button>
        </form>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Employee Number</th>
                <th>Hire Date</th>
                <th>Salary</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                foreach (var teacher in Model)
                {
                    <tr>
                        <td>@teacher.teacherId</td>
                        <td>@teacher.teacherFname</td>
                        <td>@teacher.teacherLname</td>
                        <td>@teacher.employeeNumber</td>
                        <td>@teacher.hireDate</td>
                        <td>@teacher.teacherSalary</td>
                        <td class="text-center">
                            <a href="/teacher/show/@teacher.teacherId">View</a>
                            <a href="/Teacher/Delete/@teacher.teacherId" class="delete-teacher" data-teacher-id="@teacher.teacherId" data-teacher-fname="@teacher.teacherFname" data-teacher-lname="@teacher.teacherLname" data-bs-toggle="modal" data-bs-target="#deleteModal">Delete</a>

                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center">No records found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>


<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete Teacher</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <p>Are you sure you want to delete <span id="teacherName"></span>?</p>
                <form id="deleteForm" action="/teacher/delete" method="post">
                    <input type="hidden" id="teacherId" name="teacherId" />
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" form="deleteForm" class="btn btn-danger">Yes</button>
            </div>
        </div>
    </div>
</div>




@section Scripts {
    <script>
        $(document).ready(function () {
            $('.delete-teacher').on('click', function () {
                var teacherId = $(this).data('teacher-id');
                var teacherFname = $(this).data('teacher-fname');
                var teacherLname = $(this).data('teacher-lname');

                $('#teacherId').val(teacherId);
                $('#teacherName').text(teacherFname + ' ' + teacherLname);

                $('#deleteModal').modal('show');
            });
        });
    </script>
}
