@model IEnumerable<SchoolProject.Models.Teacher>
@{
    ViewBag.Title = "Lists";
}

<h2 class="text-danger">List of Teachers</h2>
<p>This page should be showing information about all Articles</p>

<div id="containerlist">
    <h2>List of Teachers</h2>
    
        <table class="table table-bordered table-striped w-25">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Teacher Name</th>
                 

                </tr>
            </thead>
            <tbody>
                @foreach (var teacher in Model)
                {
                    <tr>
                        <th>@teacher.teacherId</th>
                        <td><a href="/Teacher/Show/@teacher.teacherId">@teacher.teacherFname @teacher.teacherLname</a></td>

                    </tr>
                }
                </tbody>
        </table>
    
</div>

